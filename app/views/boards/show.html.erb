
<html>
  <head>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/animate.css">
    <style>.wow:first-child {visibility: hidden;}</style>
    <title>IdeaTouch</title>
  </head>

  <body>

    <div class="preload"></div>

    <div class="content">

    <div class= "wow fadeIn" data-wow-duration="0.5s" data-wow-delay="0.5s">
    <div id="topo">
      <div class="topo-Logo masterTooltip wow fadeIn" title="Here is a very nice link." data-wow-duration="1.0s" data-wow-delay="1.0s">
          IDeaTouch
      </div>
        
        <%= link_to sign_out_path, method: :delete  do %>
        <div class="topo-perfil wow fadeInRight" data-wow-duration="1.1s" data-wow-delay="1.1s">
          <span class="glyphicon glyphicon-off" aria-hidden="true">
          </spam>
        </div>
        <% end %>


      <div class="topo-perfil wow fadeInRight" data-wow-duration="1.2s" data-wow-delay="1.2s">
        <span class="glyphicon glyphicon glyphicon-bell" aria-hidden="true">
        </spam>
      </div>

      <div class="topo-perfil wow fadeInRight" data-wow-duration="1.3s" data-wow-delay="1.3s">
         <span class="glyphicon glyphicon-user" aria-hidden="true">
         </spam>
      </div>



      </div>
    </div>

    <div id = "topo2">
      
      <div class="caixa-icon wow fadeInLeft" data-wow-duration="0.4s" data-wow-delay="0.4s">
        <span class="glyphicon glyphicon-menu-right" aria-hidden="true" ></span>
       </div>

       <%= link_to "/dynamics" , method: :get  do %>
        <div class="caixa-menu wow fadeInLeft" data-wow-duration="0.5s" data-wow-delay="0.5s">
          <div class="letraTitulo"> 
            Dynamic 
          </div>
          <div class="letraNome"> 
            <span class="glyphicon glyphicon-king" aria-hidden="true" ></span>
            <%= @board.dynamic.name %> 
          </div>
         </div>
        <% end %>

       <div class="caixa-icon wow fadeInLeft" data-wow-duration="0.6s" data-wow-delay="0.6s">
        <span class="glyphicon glyphicon-menu-right" aria-hidden="true" ></span>
       </div>

       <%= link_to "/dynamics/#{@board.dynamic.id}", method: :get  do %>
          <div class="caixa-menu wow fadeInLeft" data-wow-duration="0.7s" data-wow-delay="0.7s">
            <div class="letraTitulo"> Board </div>
            <div class="letraNome"> <%= @board.name %> </div>
           </div>
        <% end %>


       <div class="caixa-relogio wow fadeInLeft" data-wow-duration="0.5s" data-wow-delay="0.5s">
        <div class="letraRelogio">
          1 Day 2 Hour 12 Minuts Left
          <span class="glyphicon glyphicon-time" aria-hidden="true" ></span>
        </div>
       </div>
      

    </div>

    <br><br><br>
    

      <div id="box-2">
<br><br>
        <div class="fora">
          <div class="lateral-perfil wow fadeInUp" data-wow-duration="0.5s" data-wow-delay="0.5s">
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></spam>
          </div>
          <div id="hover-content">
               <div class="lateral2-perfil wow fadeInLeft" data-wow-duration="0.2s" data-wow-delay="0.2s">View Note</div>
          </div>
        </div>
<br><br><br>
         <div class="fora">
          <div class="lateral-perfil wow fadeInUp" data-wow-duration="0.6s" data-wow-delay="0.6s">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></spam>
          </div>
          <div id="hover-content">
               <div class="lateral2-perfil wow fadeInLeft" data-wow-duration="0.2s" data-wow-delay="0.2s">Edit Note</div>
          </div>
        </div>
<br><br><br>
        <div class="fora">
          <div class="lateral-perfil wow fadeInUp" data-wow-duration="0.7s" data-wow-delay="0.7s">
            <span class="glyphicon glyphicon-move" aria-hidden="true"></spam>
          </div>
          <div id="hover-content">
               <div class="lateral2-perfil wow fadeInLeft" data-wow-duration="0.2s" data-wow-delay="0.2s">Move to Board</div>
          </div>
        </div>
<br><br><br>  
        <div class="fora">
          <div class="lateral-perfil wow fadeInUp" data-wow-duration="0.8s" data-wow-delay="0.8s">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></spam>
          </div>
          <div id="hover-content">
               <div class="lateral2-perfil wow fadeInLeft" data-wow-duration="0.2s" data-wow-delay="0.2s">Delete Note</div>
          </div>
        </div>
<br><br><br>  
        <div class="fora">
          <div class="lateralBoard-perfil wow fadeInUp" data-wow-duration="0.9s" data-wow-delay="0.9s">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></spam>
          </div>
          <div id="hover-content">
               <div class="lateral2Board-perfil wow fadeInLeft" data-wow-duration="0.2s" data-wow-delay="0.2s">Edit Board</div>
          </div>
        </div>
<br><br><br>
        
         <%= link_to  @board, method: :delete, data: { confirm: 'Are you sure?' } do %>
         <div class="fora">
          <div class="lateralBoard-perfil wow fadeInUp" data-wow-duration="1.0s" data-wow-delay="1.0s">
            <span class="glyphicon glyphicon-minus"  aria-hidden="true"></spam>
          </div>
          <div id="hover-content">
               <div class="lateral2Board-perfil wow fadeInLeft" data-wow-duration="0.2s" data-wow-delay="0.2s">Delete Board</div>
          </div>
        </div>
         <% end %>
<br><br><br>       

      </div>

        <div id="box-3">
            <% for note in @board.notes %>
                <div class = "hvr-curl-top-left  wow bounceIn" data-wow-duration="0.5s" data-wow-delay="0.5s" >
                  <!-- <%= link_to "/notes/#{note.id}", method: :get  do %> -->
                  <div class="notaAmarelo"> 
                   <%= check_box_tag 'notes_ids[]', note.id %>
                   <div class="hhp"><%= note.id%></div>
                   <hh4><%= note.text %></hh4> 
                </div>
                </div>
              <!--  <% end %>-->
            <% end %>

          <%= link_to addNote_path(@board) , method: :get  do %>
          <div class="notaMenu wow fadeInUp" data-wow-duration="0.6s" data-wow-delay="0.6s">                
                  <div class="hh1"><span class="glyphicon glyphicon-file" aria-hidden="true" >
                  </span> </div> <div class="hh2"> New Note</div> 
          </div>
          <% end %>

    </div>

    <script>wow = new WOW({animateClass:'animated',offset:100,
      callback:function(box){console.log("WOW: animating <" + box.tagName.toLowerCase() + ">")}});
      wow.init();
      document.getElementById('moar').onclick = function() {
      var section = document.createElement('section');
      section.className = 'section--purple wow fadeInDown';
      this.parentNode.insertBefore(section, this);};
    </script>

    <script>
      $(function() {
          $(".preload").fadeOut(10, function() {
              $(".content").fadeIn(10);        
          });
      });
    </script>

    <script>
        $(window).resize(setDivVisibility);
    function setDivVisibility(){
         if (($(window).width()) < '700'){  
         $('#topo2').css('height','100px');  
         } else {  
         $('#topo2').css('height','50px');  
         } 
     }
     </script>


  </body>
</html>

